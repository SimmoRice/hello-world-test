{
  "name": "dark-mode-tests",
  "version": "1.0.0",
  "description": "Test suite for dark mode toggle functionality",
  "scripts": {
    "test": "jest --verbose",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "darkmode.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
